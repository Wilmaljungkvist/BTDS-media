<div class="contact-list">
    <h1>Kontakt lista</h1>
    <% if (contacts.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>Namn</th>
                    <th>Mail</th>
                    <th>Kontaktorsak</th>
                    <th>Meddelande</th>
                    <th>Skickat mail till:</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% contacts.forEach(contact => { %>
                    <tr>
                        <td><%= contact.firstName %></td>
                        <td><%= contact.email %></td>
                        <td><%= contact.contactType %></td>
                        <td><%= contact.message %></td>
                        <td><%= contact.recipientEmail %></td>
                        <td>
                            <form action="/admin/contacts/<%= contact._id %>" method="POST">
                                <button type="submit">Radera</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p>Inga kontakter tillg√§ngliga</p>
    <% } %>
</div>
