<img src="/img/BDTSBanner.png" alt="" class="home-image">
<div class="container-home">
  <h3>BDTS media</h3>
  <div class="post-list">
    <% if (posts.length > 0) { %>
        <% posts.forEach(post => { %>
            <div class="post">
                <h2><%= post.header %></h2>
                <p><%= post.text %></p>
                <p class="date"><strong>Skapad:</strong> <%= post.createdAt.toLocaleDateString() %> <%= post.createdAt.toLocaleTimeString() %></p>
                <% if (post.updatedAt && post.updatedAt.getTime() !== post.createdAt.getTime()) { %>
                    <p class="date"><strong>Uppdaterad:</strong> <%= post.updatedAt.toLocaleDateString() %> <%= post.updatedAt.toLocaleTimeString() %></p>
                <% } %>
                <p class="creator"><strong>Författare:</strong> <%= post.creator %></p>
            </div>
        <% }) %>
    <% } %>
  </div>
</div>




  <div class="contact">
    <h2>Kontakta oss - BDTS media</h2>
    <form action="/send-form" method="post">
        <div class="form-group">
          <div class="form-group">
            <label for="fname">Namn*:</label><br>
            <input type="text" id="fname" name="fname" required><br>
        </div>
        <div class="form-group">
            <label for="mail">Email:</label><br>
            <input type="email" id="mail" name="email"><br>
        </div>
        <div class="form-group">
            <label for="radio">Kontaktorsak:*</label><br>
            <input type="radio" id="question" name="contactType" value="question" required>
            <label for="question">Fråga</label><br>
            <input type="radio" id="podRequest" name="contactType" value="podRequest" required>
            <label for="podRequest">Önskemål till podd</label><br>
            <input type="radio" id="feedback" name="contactType" value="feedback" required>
            <label for="podRequest">Feedback</label><br>
        </div>
        <div class="form-group">
            <label for="message">Meddelande:*</label><br>
            <textarea id="message" name="message" cols="30" rows="10" required></textarea><br>
        </div>
        <div class="form-group"> 
          <p>Genom att skicka detta formulär godkänner du sparandet av inskrivna uppgifter. Du kan läsa mer <a href="">Här!</a></p><br>
          <input type="hidden" name="recipientEmail" value="<%= process.env.BDTS_EMAIL %>">
            <input type="submit" value="Skicka">
        </div>
    </form>
</div>
</div>
